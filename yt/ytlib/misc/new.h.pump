$range i 0..n
$for i [[
$range j 1..i

$$ Handy shortcuts.
$var tmpl_args = [[$for j [[, class A$j]]]]
$var ctor_args = [[$for j , [[A$j&& arg$j]]]]
$var args_list = [[$for j , [[ForwardRV<A$j>(arg$j)]]]]

template <class TType$tmpl_args>
inline TIntrusivePtr<TType> New($ctor_args)
{
    REF_COUNTED_NEW_PROLOGUE();
    TIntrusivePtr<TType> result(new TType($args_list), false);
    REF_COUNTED_NEW_EPILOGUE();
    return result;
}
]]

